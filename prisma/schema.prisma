generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  @@map("users")
  id String @id @default(uuid()) @unique
  username String @unique
  avatar String?
  task Tasks[]
  assignments Assignments[]
}

model Tasks {
  @@map("tasks")
  id String @id @default(uuid()) @unique
  title String
  description String
  userid String
  user Users @relation(fields: [userid], references: [id])
  status status @default(not_done)
  createdat DateTime @default(now())
}

enum status {
  not_done
  completed
}

model Assignments {
  @@map("assignments")
  id String @id @default(uuid()) @unique
  title String
  description String?
  due DateTime
  userid String
  user Users @relation(fields: [userid], references: [id])
}